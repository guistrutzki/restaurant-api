{
  "openapi": "3.0.0",
  "info": {
    "title": "Restaurants-API Documentation",
    "description": "This is a restaurant API for use in an integration project at Digital House",
    "version": "1.0.0",
    "contact": {
      "email": "guistrutzki.dev@gmail.com"
    }
  },
  
  "paths": {
    "/restaurants": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["Restaurant"],
        "summary": "Create a restaurant",
        "description": "Create a new restaurant",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "coverImage": {
                    "type": "string"
                  },
                  "lat": {
                    "type": "string"
                  },
                  "lng": {
                    "type": "string"
                  },
                  "logoImage": {
                    "type": "string"
                  },
                  "rating": {
                    "type": "integer"
                  },
                  "gallery": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "name": "Madre Mia",
                  "description": "Um bom restaurante",
                  "address": "Rua Santa Cruz, 2200",
                  "logoImage": "http://www.example.com/images/logo.png",
                  "coverImage": "http://www.example.com/images/logo.png",
                  "lat": "-31.76782033057898",
                  "lng": "-52.33720257498689",
                  "rating": 5,
                  "gallery": ["https://topview.com.br/wp-content/uploads/2017/09/restaurante-pelotas-5-e1529518056539.jpg"]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Restaurant already exists"
          }
        }
      },
      "get": {
        "tags": ["Restaurant"],
        "summary": "List all restaurants",
        "description": "List all restaurants",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "lat": {
                        "type": "string"
                      },
                      "lng": {
                        "type": "string"
                      },
                      "coverImage": {
                        "type": "string"
                      },
                      "logoImage": {
                        "type": "string"
                      },
                      "address": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "rating": {
                        "type": "integer"
                      },
                      "gallery": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "E-mail already exists"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["User"],
        "summary": "Authenticate the user",
        "description": "Authenticate the user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Auth"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Missing or invalid token"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Auth": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    }
  }
}